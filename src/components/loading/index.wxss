/* pages/test/congUI/loading/loading.wxss */
@import "../icon/iconfont.wxss";

.contant {
    position: absolute;
    left: 0;
    top: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.2);
    animation: contant 0.4s ease-out;
}

@keyframes contant {
    from {
        opacity: 0;
    }

    to {
        opacity: 1;
    }
}

.loading-contant {
    position: relative;
    padding: 26rpx;
    display: flex;
    flex-direction: column;
    min-width: 220rpx;
    min-height: 200rpx;
    background: rgba(0, 0, 0, 0.68);
    border-radius: 8rpx;
    color: #fafafa;
}

.icon-contant {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    flex: 1;
    z-index: 3;
}

.icon-contant-cover {
    position: absolute;
    left: 0rpx;
    top: 20rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 88rpx;
    z-index: 4;
}



.text-contant {
    text-align: center;
    font-size: 32rpx;
}


.icon {
    animation: loading 1s linear infinite;
}

@keyframes loading {
    from {
        transform: rotate(0deg)
    }

    to {
        transform: rotate(360deg)
    }
}
/* pages/test/congUI/radio/radio.wxss */
@import "../icon/iconfont.wxss";

.contant {
    width: 100%;
    height: 100%;
}

.item-contant {
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding-left: 50rpx;
    width: 100%;
    transition: background 0.2s;
}

.item-contant:active {
    background-color: #f5f5f5;
}

.value-contant {
    display: flex;
    align-items: center;
    width: 100%;
    height: 100%;
    border-top: 2rpx solid rgb(217, 217, 217);
}

.text {
    padding: 20rpx 0;
    flex: 1;
    height: 100%;
}

.text-name {
    font-size: 32rpx;
}

.text-detail {
    padding: 8rpx 0;
    font-size: 24rpx;
    color: #8c8c8c;
}

.icon-contant {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 110rpx;
    height: 100%;
}

view {
    box-sizing: border-box;
}

.tick {
    color: #1890ff;
}
/* pages/test/congUI/search/search.wxss */
@import "../icon/iconfont.wxss";

.contant {
    display: flex;
    align-items: center;
    padding: 16rpx 0 16rpx 16rpx;
    width: 100%;
    height: 80rpx;
    background-color: #f5f5f5;
}

.input-contant {
    display: flex;
    justify-content: center;
    align-items: center;
    flex: 1;
    height: 100%;
    background-color: #fff;
    border-radius: 8rpx;
}

.input {
    display: flex;
    transition: flex 0.2s;
}

.text {
    width: 100%;
    height: 100%;
    padding: 10rpx 2rpx;
    white-space: nowrap;
    overflow: hidden;
    font-size: 28rpx;
    color: #8c8c8c;
}

.cancel-contant {
    margin-left: 16rpx;
    width: 0rpx;
    color: #1890ff;
    white-space: nowrap;
    overflow: hidden;
    transition: width 0.2s;
    font-size: 28rpx;
    text-align: center;
}
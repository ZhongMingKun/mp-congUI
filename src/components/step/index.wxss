@import "../icon/iconfont.wxss";

.contant {
    margin-top: 20rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    
}

.box{
    display: flex;
    width: 100%;
    height: 35rpx;
}

.step-contant {
    display: flex;
    align-items: center;
    flex: 1;
    height: 100%;
}

.step-contant:last-child{
    text-align: end;
}

.progress {
    flex: 1;
    height: 4rpx;
    background-color: #f5f5f5;
}

.space{
    flex: 1;
}

.icon-contant {
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 0 10rpx;
    width: 35rpx;
    height: 100%;
    border-radius: 50%;
    animation: icon 1s;
}

.first-contant{
    margin: 0 10rpx;
    width: 35rpx;
    height: 100%;
}


@keyframes icon {
    from {
        opacity: 0;
    }

    to {
        opacity: 1;
    }
}

.cover {
    width: 0%;
    height: 100%;
    animation: cover 1s;
    animation-fill-mode: forwards;
    background-color: skyblue;
}

@keyframes cover {
    form {
        width: 0%;
    }

    to {
        width: 100%;
    }
}

.step-text{
    display: flex;
    margin-top: 10rpx;
    width: 100%;
    font-size: 28rpx;
    color: #d9d9d9;
}

.text-contant{
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 0 10rpx;
    width: 35rpx;
    height: 100%;
    animation: icon 1s;
}

.step-contant:last-child .text-contant{
    display: flex;
    justify-content: flex-end;
    align-items: center;
}